parameters:
    database_driver:   pdo_mysql
    database_host:     127.0.0.1
    database_port:     ~
    database_name:     librecores
    database_user:     librecores
    database_password: '{{ site_mysql_password }}'

    # Swiftmailer email configuration
    # Docs at https://symfony.com/doc/3.4/email.html
    mailer_encryption: '{{ site_smtp_encryption }}'
    mailer_transport:  smtp
    mailer_host:       '{{ site_smtp_host }}'
    mailer_port:       '{{ site_smtp_port }}'
    mailer_user:       '{{ site_smtp_user }}'
    mailer_password:   '{{ site_smtp_password }}'

    # Require confirmation of email address after a new user registered
    # on LibreCores. Requires a working mailer setup.
    user_email_confirmation_enabled: {{ site_user_email_confirmation_enabled }}

    locale:            en

    # A secret key that's used to generate certain security-related tokens
    secret:            '{{ site_symfony_secret_token }}'

    # RabbitMQ configuration
    rabbitmq_host:     localhost
    rabbitmq_port:     5672
    rabbitmq_user:     librecores
    rabbitmq_password: '{{ site_rabbitmq_password }}'

    # OAuth configuration: GitHub
    # Register at https://github.com/settings/applications
    github_app_id:     '{{ site_github_app_id }}'
    github_app_secret: '{{ site_github_app_secret }}'

    # OAuth configuration: Google
    # Register at https://console.developers.google.com/
    # https://console.developers.google.com/project/librecores/apiui/credential/oauthclient
    google_app_id:     '{{ site_google_app_id }}'
    google_app_secret: '{{ site_google_app_secret }}'

    # Sentry Configuration
    # Register at https://sentry.io
    sentry_dsn:        '{{ site_sentry_dsn }}'
    sentry_env:        '{{ site_sentry_env }}'

    env(ALGOLIA_APP_ID):  '{{ site_algolia_app_id }}'
    env(ALGOLIA_API_KEY): '{{ site_algolia_api_key }}'